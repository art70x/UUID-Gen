{
  "name": "web-app",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "build": "mkdir -p build && cp *.html *.css *.js -t build/ && cp -r assets build/assets",
    "format": "prettier -w 'build/**/*.{html,css,js}'",
    "postbuild": "npm run format"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-organize-attributes": "^1.0.0"
  }
}
